{
    "manifest_version": 3,
    "name": "Filtro Google Lens",
    "version": "1.8.3",
    "description": "Filtrado de competidores dentro de los resultados de Google Lens",
    "icons": {
        "48": "images/icon-32.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://lens.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://lens.google.com/*"],
            "js": ["content.js"]
        },
        {
            "matches": ["https://*.aliexpress.com/*"],
            "js": ["aliexpress.js"]
        },
        {
            "matches": ["https://m.shein.com.mx/*"],
            "js": ["sheinmx.js"]
        }
    ]
  }